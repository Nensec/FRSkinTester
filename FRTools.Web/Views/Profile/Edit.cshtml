@model EditProfileViewModel

@{
    
    ViewBag.Title = "Edit profile";
}


<div class="card mt-3">
    <div class="card-header">
        <h5>@(ViewBag.Title)</h5>
    </div>
    <div class="card-body">
        @using (Html.BeginRouteForm("EditProfilePost", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header">
                            Profile settings
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label class="col-6" for="@Html.IdFor(model => model.PublicProfile)">Public profile</label>
                                <div class="col-6">
                                    <div class="custom-control custom-switch">
                                        @Html.CheckBoxFor(model => model.PublicProfile, new { @class = "custom-control-input" })
                                        <label for="@Html.IdFor(model => model.PublicProfile)" class="custom-control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-6" for="@Html.IdFor(model => model.ShowFRLinkStatus)">FR links public</label>
                                <div class="col-6">
                                    <div class="custom-control custom-switch">
                                        @Html.CheckBoxFor(model => model.ShowFRLinkStatus, new { @class = "custom-control-input" })
                                        <label for="@Html.IdFor(model => model.ShowFRLinkStatus)" class="custom-control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.Username)" class="col-md-6">Username</label>
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", data_lpignore = "true" })
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-6">Profile bio <span class="fa fa-info-circle text-info" title="This is just plain tekst, rich-text is not supported (yet)" data-toggle="tooltip"></span></label>
                                <div class="col-md-6">
                                    @Html.TextAreaFor(model => model.ProfileBio, new { @class = "form-control", rows = 4 })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3">
                        <div class="card-header">
                            Skin and preview settings
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.ShowSkinsOnProfile)" class="col-6">Show skins on your profile</label>
                                <div class="col-6">
                                    <div class="custom-control custom-switch">
                                        @Html.CheckBoxFor(model => model.ShowSkinsOnProfile, new { @class = "custom-control-input" })
                                        <label for="@Html.IdFor(model => model.ShowSkinsOnProfile)" class="custom-control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.ShowPreviewsOnProfile)" class="col-6">Show previews on your profile</label>
                                <div class="col-6">
                                    <div class="custom-control custom-switch">
                                        @Html.CheckBoxFor(model => model.ShowPreviewsOnProfile, new { @class = "custom-control-input" })
                                        <label for="@Html.IdFor(model => model.ShowPreviewsOnProfile)" class="custom-control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.ShowPingListsOnProfile)" class="col-6">Show pinglists on your profile</label>
                                <div class="col-6">
                                    <div class="custom-control custom-switch">
                                        @Html.CheckBoxFor(model => model.ShowPingListsOnProfile, new { @class = "custom-control-input" })
                                        <label for="@Html.IdFor(model => model.ShowPingListsOnProfile)" class="custom-control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <hr />
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.DefaultShowSkinsInBrowse)" class="col-6">By default, show skins in browse</label>
                                <div class="col-6">
                                    <div class="custom-control custom-switch">
                                        @Html.CheckBoxFor(model => model.DefaultShowSkinsInBrowse, new { @class = "custom-control-input" })
                                        <label for="@Html.IdFor(model => model.DefaultShowSkinsInBrowse)" class="custom-control-label"></label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.DefaultSkinsArePublic)" class="col-6">By default, make skins public</label>
                                <div class="col-6">
                                    <div class="custom-control custom-switch">
                                        @Html.CheckBoxFor(model => model.DefaultSkinsArePublic, new { @class = "custom-control-input" })
                                        <label for="@Html.IdFor(model => model.DefaultSkinsArePublic)" class="custom-control-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-3">
                        <div class="card-header">
                            Advanced coverage settings
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.DefaultAdvancedCoverageDummyOpacity)" class="col-md-6">Default opacity dummy dragon</label>
                                <div class="col-md-6">
                                    <input class="w-100" style="margin-top:3px" type="range" min="1" max="100" value="@Model.DefaultAdvancedCoverageDummyOpacity" id="@Html.IdFor(model => model.DefaultAdvancedCoverageDummyOpacity)" name="@Html.NameFor(model => model.DefaultAdvancedCoverageDummyOpacity)">
                                    @Html.ValidationMessageFor(model => model.DefaultAdvancedCoverageDummyOpacity)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.DefaultAdvancedCoverageDummyOpacity)" class="col-md-6">Default opacity skin dragon</label>
                                <div class="col-md-6">
                                    <input class="w-100" style="margin-top:3px" type="range" min="1" max="100" value="@Model.DefaultAdvancedCoverageSkinOpacity" id="@Html.IdFor(model => model.DefaultAdvancedCoverageSkinOpacity)" name="@Html.NameFor(model => model.DefaultAdvancedCoverageSkinOpacity)">
                                    @Html.ValidationMessageFor(model => model.DefaultAdvancedCoverageDummyOpacity)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.DefaultAdvancedCoverageBackgroundColor)" class="col-md-6">Default background color</label>
                                <div class="col-md-6">
                                    <input class="w-100" type="color" value="@Model.DefaultAdvancedCoverageBackgroundColor" id="@Html.IdFor(model => model.DefaultAdvancedCoverageBackgroundColor)" name="@Html.NameFor(model => model.DefaultAdvancedCoverageBackgroundColor)" style="width:100%;">
                                    @Html.ValidationMessageFor(model => model.DefaultAdvancedCoverageBackgroundColor)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.DefaultAdvancedCoverageOverlayColor)" class="col-md-6">Default outside overlay color</label>
                                <div class="col-md-6">
                                    <input class="w-100" type="color" value="@Model.DefaultAdvancedCoverageOverlayColor" id="@Html.IdFor(model => model.DefaultAdvancedCoverageOverlayColor)" name="@Html.NameFor(model => model.DefaultAdvancedCoverageOverlayColor)" style="width:100%;">
                                    @Html.ValidationMessageFor(model => model.DefaultAdvancedCoverageOverlayColor)
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.DefaultAdvancedCoveragePercentagePrecision)" name="@Html.NameFor(model => model.DefaultAdvancedCoveragePercentagePrecision)" class="col-md-6">Default percentage precision</label>
                                <div class="col-md-6">
                                    <input class="w-100" style="margin-top:3px" type="range" min="0" max="10" value="@Model.DefaultAdvancedCoveragePercentagePrecision" id="@Html.IdFor(model => model.DefaultAdvancedCoveragePercentagePrecision)" name="@Html.NameFor(model => model.DefaultAdvancedCoveragePercentagePrecision)">
                                    @Html.ValidationMessageFor(model => model.DefaultAdvancedCoveragePercentagePrecision)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3">
                        <div class="card-header">
                            Misc site settings
                        </div>
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="@Html.IdFor(model => model.ShowAds)" class="col-6">Enable ads on the site <span class="fa fa-info-circle text-info" title="You can enable them to support the site or disable them if you don't want to see them. Disabling ads does not remove any features from the site for you" data-toggle="tooltip"></span></label>
                                <div class="col-6">
                                    <div class="custom-control custom-switch">
                                        @Html.CheckBoxFor(model => model.ShowAds, new { @class = "custom-control-input" })
                                        <label for="@Html.IdFor(model => model.ShowAds)" class="custom-control-label"></label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        }
    </div>
</div>
