          });

        window.appInsights=appInsights,appInsights.queue&&0===appInsights.queue.length&&appInsights.trackPageView();
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.RouteUrl("Home")" class="navbar-brand" style="padding-right:0">
                    <img style="height:20px;" src="@(ViewBag.Logo ?? "/Content/frtools.svg")" onerror="this.src='@(ViewBag.PngLogo ?? "/Content/frtools.png")'" />
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Discord Bot <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Bot info", "DiscordHome")</li>
                            <li>@Html.RouteLink("Help", "DiscordHelp")</li>
                            @if (Request.IsAuthenticated)
                            {
                                <li role="separator" class="divider"></li>
                                <li>@Html.RouteLink("Manage your bot", "DiscordManage")</li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Skin tester <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Skin tester info", "SkinTesterHome")</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.RouteLink("Browse skins", "Browse", null, new { title = "Browse skins that are uploaded to the tool" })</li>
                            <li>@Html.RouteLink("Upload skin", "Upload")</li>
                            <li>@Html.RouteLink("Preview skin", "PreviewHome")</li>
                            @if (Request.IsAuthenticated)
                            {
                                <li role="separator" class="divider"></li>
                                <li>@Html.RouteLink("Link skin", "LinkExisting", null, new { title = "Link existing skin to your account" })</li>
                                <li>@Html.RouteLink("Manage your skins", "ManageSkins", null, new { title = "Manage your skins" })</li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Pinglist manager <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Pinglist info", "PinglistInfo", null, new { title = "Info about how the pinglist manager works" })</li>
                            <li role="separator" class="divider"></li>
                            <li>@Html.RouteLink("Create pinglist", "PinglistCreate", null, new { title = "Create a new pinglist" })</li>
                            <li>@Html.RouteLink("View pinglists", "Pinglist", null, new { title = "View the pinglist with a given ID" })</li>
                            @if (Request.IsAuthenticated)
                            {
                                <li role="separator" class="divider"></li>
                                <li>@Html.RouteLink("Link list", "PinglistLink", null, new { title = "Link an existing ping list to your account" })</li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Snippets <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Code snippets", "SnippetsHome", null, new { title = "An assortment of small scripts to help you out with your every day Flight Rising needs" })</li>
                            <li role="separator" class="divider"></li>
                            @foreach (var snippet in FRTools.Web.Controllers.SnippetController.Scripts)
                            {
                                <li>
                                    <a href="@(Url.RouteUrl("SnippetsHome"))#@(snippet.Value.SanitizedName)">@(snippet.Value.Name)</a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Other tools <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.RouteLink("Dress up a scry", "ScryerDresser", null, new { title = "Use the dressing room to dress up a scry" })</li>
                            <li>@Html.RouteLink("Unredacted FR Newsreader", "NewsReader", null, new { title = "Go through the Flight Rising news posts and see what staff is deleting" })</li>
                        </ul>
                    </li>
                </ul>
                @if (Request.IsAuthenticated)
                {
                    using (Html.BeginRouteForm("Logout", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
                    {
                        @Html.AntiForgeryToken()
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.RouteLink($"Hello {User.Identity.Name}!", "SelfProfile", null, new { title = "View your profile" })
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage account <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>
                                        @Html.RouteLink($"Account details", "ManageAccount", null, new { title = "Manage your account" })
                                    </li>
                                    <li>
                                        @Html.RouteLink($"Logins", "ManageLogins", null, new { title = "Manage logins to your account" })
                                    </li>
                                    <li role="separator" class="divider"></li>
                                    <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-off"></span> Log out</a></li>
                                </ul>
                            </li>
                        </ul>

                    }
                }
                else
                {
                    <ul class="nav navbar-nav navbar-right">

                        <li>
                            @Html.RouteLink("Login", "Login")
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container-wrapper">
        <div class="container">
            <div class="body-content">
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @Html.Raw(TempData["Error"])
                    </div>
                }
                @if (TempData["Warning"] != null)
                {
                    <div class="alert alert-warning alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @Html.Raw(TempData["Warning"])
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @Html.Raw(TempData["Success"])
                    </div>
                }
                @if (TempData["Info"] != null)
                {
                    <div class="alert alert-info alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        @Html.Raw(TempData["Info"])
                    </div>
                }
                @RenderBody()
                <hr />
                <footer>
                    <div class="pull-left">
                        <p>Dragons &copy; - Stormlight Workshop LLC</p>
                        <p>Skins &copy; - respective owners</p>
                        <p>Code and idea &copy; @DateTime.Now.Year - Perry van Velzen</p>
                        <p><a href="@Url.RouteUrl("Privacy")">View privacy policy</a> - <a href="@Url.RouteUrl("Contact")">View contact info</a></p>
                    </div>
                    @if (!Request.IsAuthenticated || (ViewContext.Controller as FRTools.Web.Controllers.BaseController).LoggedInUser?.ProfileSettings.ShowAds == true)
                    {
                        <div class="pull-right">
                            <a href='https://ko-fi.com/X8X6RLCS' target='_blank'><img height='36' style='border:0px;height:36px;' src='https://az743702.vo.msecnd.net/cdn/kofi1.png?v=0' border='0' alt='Buy Me a Coffee at ko-fi.com' /></a>
                        </div>
                    }
                </footer>
            </div>
            @if (!Request.IsAuthenticated || (ViewContext.Controller as FRTools.Web.Controllers.BaseController).LoggedInUser?.ProfileSettings.ShowAds == true)
            {
                <div id="ad" class="hidden-sm hidden-xs">
                    <a target="_blank" href="https://www.patreon.com/frtools">
                        <img src="~/Content/patreon_banner.png" />
                    </a>
                    <a class="text-center center-block text-muted" title="It's just an option in your profile, no hidden premium stuff or anything!" data-placement="bottom" data-toggle="tooltip" href="@(Url.RouteUrl("EditProfile"))"><small>- disable ads -</small></a>
                </div>
            }
        </div>
    </div>

    @RenderSection("scripts", required: false)
    <script>
        $(() => {
            $('[data-toggle="tooltip"]').tooltip({ html: true });
        })
    </script>
    @Html.Partial("Site.js")
</body>
</html>
