@model UploadModelPostViewModel

@{
    ViewBag.Title = "Upload Result";
}

<div class="row">
    <div class="col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Upload success!</h4>
            </div>
            <div class="panel-body">
                <h4>Your skin's URLs</h4>
                <hr />
                <p>
                    This URL is what you share with others to preview your skin.
                </p>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label style="padding-top:7px; text-align:left" class="col-md-4 control-label" for="PreviewLink">
                            Your link <span class="glyphicon glyphicon-alert text-danger" data-toggle="tooltip" title="This link will not work on the Flight Rising forums due to their censorship of off-site tools."></span>
                        </label>
                        <div class="col-md-8">
                            @Html.CopyTextBox(Url.RouteUrl("Preview", new { skinId = Model.SkinId }, "https"), "PreviewLink", "skin", Model.SkinId)
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="padding-top:7px; text-align:left" class="col-md-4 control-label" for="PreviewShareLink">
                            Share link <span class="glyphicon glyphicon-alert text-warning" data-toggle="tooltip" title="Generating a share link allows you to post links on the Flight Rising forums."></span>
                        </label>
                        <div class="col-md-8">
                            @Html.CopyTextBox(Model.ShareUrl, "PreviewShareLink", "skin", Model.SkinId)
                        </div>
                    </div>
                </div>

                @if (Request.IsAuthenticated)
                {
                    <div>
                        <hr />
                        <p>Since you are logged in you can manage this skin from your management page: @Html.RouteLink("Here", "ManageSkins")</p>
                    </div>
                }
                else
                {
                    <div>
                        <hr />
                        <h4>You can use this link to manage your skin, keep this safe!</h4><br />
                        <div class="alert alert-danger">

                            Do not give this link out to anyone! Do not copy paste this onto the forums or send it in a private message. You can delete your skin with this link!
                        </div>
                    </div>
                    <div class="form-group">
                        <label style="padding-top:7px" class="col-md-3 control-label" for="ManageLink">
                            Management page
                        </label>
                        <div class="col-md-9">
                            @Html.CopyTextBox(Url.RouteUrl("Manage", new { SkinId = Model.SkinId, SecretKey = Model.SecretKey }, "https"), "ManageLink", null, null)
                        </div>
                    </div>
                    <p>
                        <i style="font-size:10px;">
                            Did you know that if you <a href="@Url.RouteUrl("Login")">login</a> all skins you upload will be linked to your account, allowing you easily manage them without having to remember this link!
                        </i>
                    </p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="text-center">
                    <img style="width:100%" src="@(Model.CDNBasePath + Model.PreviewImageUrl)" />
                </div>
            </div>
        </div>
    </div>
</div>