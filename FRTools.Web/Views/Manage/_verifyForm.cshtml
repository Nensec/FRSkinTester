@model VerifyFRPostViewModel

@using (Html.BeginRouteForm("VerifyFRPost"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group row">
        @Html.Label("User Id", htmlAttributes: new { @class = "col-md-2 col-form-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.LairId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LairId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="d-flex justify-content-end">
        <input type="submit" value="Verify my account!" class="btn btn-primary" />
    </div>
}