@model FRSkinTester.Models.UploadModelPostViewModel

@{
    ViewBag.Title = "Upload Result";
}

<style>
    label {
        padding-top: 7px;
    }
</style>
<div class="row">
    <div class="col-md-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Upload success!</h2>
            </div>
            <div class="panel-body">
                <div>
                    <h4>Your skin's URLs</h4>
                    <hr />
                    <p class="col-md-12">
                        This URL is what you share with others to preview your skin.
                    </p>
                    <div class="col-md-10">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="PreviewLink">
                                Existing dragon preview
                            </label>
                            <div class="col-md-8">
                                @Html.CopyTextBox(Url.RouteUrl("Preview", new { SkinId = Model.SkinId }, "https"), "PreviewLink")
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <label class="col-md-4 control-label" for="PreviewScryLink">
                                Scry dragon preview
                            </label>
                            <div class="col-md-8">
                                @Html.CopyTextBox(Url.RouteUrl("PreviewScryer", new { SkinId = Model.SkinId }, "https"), "PreviewScryerLink")
                            </div>
                        </div>
                    </div>

                    @if (Request.IsAuthenticated)
                    {
                        <div class="col-md-12">
                            <hr />
                            <p>Since you are logged in you can manage this skin from your management page: @Html.RouteLink("Here", "ManageAccount")</p>
                        </div>
                    }
                    else
                    {
                        <div class="col-md-12">
                            <hr />
                            <h3>You can use this link to manage your skin, keep this safe!</h3><br />
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label class="col-md-4 control-label" for="ManageLink">
                                    Management page
                                </label>
                                <div class="col-md-8">
                                    @Html.CopyTextBox(Url.RouteUrl("Manage", new { SkinId = Model.SkinId, SecretKey = Model.SecretKey }, "https"), "ManageLink")
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="text-center">
                    <img style="width:100%" src="@(Model.PreviewUrl)" />
                </div>
            </div>
        </div>
    </div>
</div>