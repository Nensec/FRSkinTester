@model FRSkinTester.Models.UploadModelPostViewModel

@{
    ViewBag.Title = "Upload Result";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Upload success!</h2>
    </div>
    <div class="panel-body">
        <div>
            <h4>Your skin's URLs</h4>
            <hr />
            <p class="col-md-12">
                This URL is what you share with others to preview your skin.
            </p>
            <div class="col-md-8">
                <div class="form-group">
                    <div class="input-group">
                        <input id="PreviewLink" type="text" class="form-control" value="@Url.Action("Preview", "Home", new { SkinId = Model.SkinId }, "http")">
                        <span class="input-group-btn">
                            <button class="btn btn-success" type="button" onclick="document.getElementById('PreviewLink').select(); document.execCommand('copy'); this.innerHTML = 'Copied!'">Copy!</button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="form-group">
                    <div class="input-group">
                        <input id="PreviewScryLink" type="text" class="form-control" value="@Url.Action("PreviewScryer", "Home", new { SkinId = Model.SkinId }, "http")">
                        <span class="input-group-btn">
                            <button class="btn btn-success" type="button" onclick="document.getElementById('PreviewScryLink').select(); document.execCommand('copy'); this.innerHTML = 'Copied!'">Copy!</button>
                        </span>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <hr />
                <h3>You can use this link to manage your skin, keep this safe!</h3><br />
            </div>
            <div class="col-md-8">
                <div class="input-group">
                    <input id="DeleteLink" type="text" class="form-control" value="@Url.Action("Manage", "Home", new { SkinId = Model.SkinId, SecretKey = Model.SecretKey }, "http")">
                    <span class="input-group-btn">
                        <button class="btn btn-warning" type="button" onclick="document.getElementById('DeleteLink').select(); document.execCommand('copy'); this.innerHTML = 'Copied!'">Copy!</button>
                    </span>
                </div>
            </div>
        </div>
    </div>
</div>